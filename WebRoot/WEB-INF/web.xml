<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <session-config>  
         <session-timeout>20</session-timeout>  
   </session-config>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.sms.web.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <description>学籍控制器</description>
    <display-name>Xueji</display-name>
    <servlet-name>XuejiController</servlet-name>
    <servlet-class>com.sms.web.XuejiController</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>StudentFileServlet</servlet-name>
    <servlet-class>com.sms.web.StudentFileServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>DownloadServlet</servlet-name>
    <servlet-class>com.sms.web.DownloadServlet</servlet-class>
  </servlet>




  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>XuejiController</servlet-name>
    <url-pattern>/servlet/XuejiController</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>StudentFileServlet</servlet-name>
    <url-pattern>/file</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DownloadServlet</servlet-name>
    <url-pattern>/servlet/Download</url-pattern>
  </servlet-mapping>
  
  <filter>
  	<filter-name>loginFilter</filter-name>
  	<filter-class>com.sms.filter.LoginFilter</filter-class>
  	<init-param>	
		<param-name>login_page</param-name>
		<param-value>/login.jsp</param-value>
  	</init-param>
  	<init-param>
  		<param-name>error_page</param-name>
  		<param-value>/login_error.jsp</param-value>
  	</init-param>
  </filter>
  <filter-mapping>
  	<filter-name>loginFilter</filter-name>
  	<servlet-name>*</servlet-name>
  	<url-pattern>*</url-pattern>
  </filter-mapping>
</web-app>